{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/UMiamiCancerCenter/sdp-metadata-schema/main/json_schemas/document/document.json",
    "title": "SDP Document",
    "description": "This document records the details of the SDP document.",
    "version": "0.0.2",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "title": "Document Id",
            "description": "Autogenerated Document Id"
        },
        "name": {
            "type": "string",
            "title": "Name"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "description": "Document description - optional"
        },
        "content": {
            "title": "Place for all the metadata for each document",
            "type": "object"
        },
        "contentSchema": {
            "type": "string",
            "title": "content schema uri"
        },
        "contentVersion": {
            "type": "string",
            "title": "content version semantic notation"
        }
    },
    "required": [
        "name"
    ]
}