{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "SDP Sample",
  "description": "This document records the details of the SDP sample metadata content",
  "version": "0.0.2",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "subject": {
      "type": "object",
      "title": "Experimental Subject",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "title": "Subject Type",
          "enum": [
            "cell line",
            "primary cells",
            "iPSC",
            "differentiated cells",
            "Tissue"
          ]
        },
        "name": {
          "type": "string",
          "title": "Name"
        },
        "organismName": {
          "type": "string",
          "title": "Organism Name",
          "graphRestriction": {
            "ontologies": [
                "obo:duo"
            ],
            "classes": [
                "DUO:0000017"
            ],
            "includeSelf": false,
            "queryFields": [
                "obo_id",
                "label"
            ]
        }
        },
        "cellLineName": {
          "type": "string",
          "title": "Cell Line Name"
        },
        "soilSample": {
          "type": "string",
          "title": "Soil Sample Name"
        },
        "wasteWater": {
          "type": "string",
          "title": "Waste Water Name"
        },
        "description": {
          "type": "string",
          "title": "Description"
        }
      }
    },
    "perturbations": {
      "type": "array",
      "title": "Perturbations",
      "items": {
        "type": "object",
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "type": "string",
            "title": "Perturbagen Type",
            "enum": [
              "small molecule",
              "CRISPR knockout",
              "RNAi",
              "antibody",
              "protein",
              "infectious agent"
            ]
          },
          "name": {
            "type": "string",
            "title": "Perturbagen Name"
          },
          "concentration": {
            "type": "string",
            "title": "Concentration"
          },
          "duration": {
            "type": "string",
            "title": "Duration"
          }
        }
      }
    }
  },
  "required": [
    "name",
    "description"
  ]
}