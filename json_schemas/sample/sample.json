{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "SDP Sample",
  "description": "This document records the details of the SDP sample metadata content",
  "version": "0.0.2",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "subject": {
      "type": "object",
      "title": "Experimental subject",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "title": "Model System",
          "enum": [
            "cell line",
            "iPSC",
            "primary cells",
            "differentiated cells",
            "tissue"
          ]
        },
        "name": {
          "type": "string",
          "title": "Name"
        },
        "cellLineName": {
          "type": "string",
          "title": "Cell Line Name",
          "graphRestriction": {
            "ontologies": [
                "obo:clo",
                "obo:cl"
            ],
            "classes": [
                "CL:0000000"
            ],
            "includeSelf": false,
            "queryFields": [
                "obo_id",
                "label"
            ]
        }
        },
        "description": {
          "type": "string",
          "title": "Description"
        }
      }
    },
    "protocol": {
      "type": "object",
      "title": "Protocol used in the sample",
      "properties": {
        "name": {
          "type": "string",
          "title": "Protocol Name"
        },
        "description": {
          "type": "string",
          "title": "Protocol Description"
        },
        "protocolExtId": {
          "type": "string",
          "format": "uri",
          "title": "Protocol External URI Identifier"
        }
      }
    },
    "perturbation": {
      "type": "array",
      "title": "Perturbation",
      "items": {
        "type": "object",
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "type": "string",
            "title": "Perturbagen",
            "enum": [
              "small molecule",
              "antibody",
              "protein",
              "RNAi"
              "CRISPR",
              "infectious agent"
            ]
          },
          "name": {
            "type": "string",
            "title": "Perturbation Name"
          },
          "description": {
            "type": "string",
            "title": "Perturbation Description"
          }
        }
      }
    }
  },
  "required": [
    "name",
    "description"
  ]
}