{
  "type": "object",
  "properties": {
    "ExperimentalSubject": {
      "type": "string",
      "enum": ["Model System", "Biospecimen", "Target"]
    },
    "SubjectType": {}
  },
  "if": {
    "properties": {
      "ExperimentalSubject": {
        "const": "Model System"
      }
    }
  },
  "then": {
    "properties": {
      "SubjectType": {
        "type": "string",
        "enum": [
          "cell line",
          "primary cells",
          "iPSC",
          "differentiated cells",
          "tissue"
        ]
      }
    }
  },
  "else": {
    "if": {
      "properties": {
        "ExperimentalSubject": {
          "const": "Biospecimen"
        }
      }
    },
    "then": {
      "properties": {
        "SubjectType": {
          "type": "string",
          "enum": ["patient sample", "wastewater"]
        }
      }
    },
    "else": {
      "if": {
        "properties": {
          "ExperimentalSubject": {
            "const": "Target"
          }
        }
      },
      "then": {
        "properties": {
          "SubjectType": {
            "type": "string",
            "enum": [
              "gene",
              "transcript",
              "protein",
              "epigenetic modification"
            ]
          }
        }
      }
    }
  }
}